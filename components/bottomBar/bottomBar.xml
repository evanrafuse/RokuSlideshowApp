<?xml version="1.0" encoding="utf-8" ?>

<component name="BottomBar" extends="LayoutGroup">
  <script type="text/brightscript" uri="pkg:/components/BottomBar/BottomBar.brs"/>
  <interface>
    <field id="slideTitle" type="String" onChange="titleChanged"/>
    <function name="updateTime"/>
  </interface>
  <children>
  <LayoutGroup
      id="dateGrp"
      layoutDirection="vert"
    >
      <MultiStyleLabel
        id="timeLbl"
        color="0x617EFF"
        numLines="2"
        lineSpacing="1.0"
        horizAlign="center"
        vertAlign="bottom"
        text="0:00PM"
        height="40"
        width="300"
      />
      <MultiStyleLabel
        id="dateLbl"
        color="0x617EFF"
        numLines="2"
        lineSpacing="1.0"
        horizAlign="center"
        vertAlign="top"
        text="Monday, January 1"
        width="300"
        height="40"
      />
    </LayoutGroup>
    <Label
      id="titleLbl"
      color="#FFFFFF"
      horizAlign="center"
      vertAlign="center"
      text=""
      width="680"
      height="80"
    >
      <Font role = "font" uri = "pkg:/assets/fonts/Gotham-Medium.otf" size = "20" />
    </Label>
    <LayoutGroup
      id="weatherGrp"
      layoutDirection="horiz"
    >
      <MultiStyleLabel
        id="weatherLbl"
        color="0x617EFF"
        numLines="2"
        lineSpacing="1.0"
        horizAlign="right"
        vertAlign="center"
        text="26C&#10;Clear"
        height="80"
        width="220"
      />
      <Poster
        id="weatherPoster"
        height="80"
        width="80"
        uri="pkg:/assets/images/placeholderIcon.png"
      />
    </LayoutGroup>
  </children>
</component>