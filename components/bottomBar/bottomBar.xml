<?xml version="1.0" encoding="utf-8" ?>

<component name="BottomBar" extends="LayoutGroup">
  <script type="text/brightscript" uri="pkg:/components/BottomBar/BottomBar.brs"/>
  <interface>
    <field id="slideTitle" type="String" onChange="titleChanged"/>
    <function name="updateTime"/>
  </interface>
  <children>
    <MultiStyleLabel
      id="timeLbl"
      color="0x617EFF"
      numLines="2"
      lineSpacing="1.0"
      horizAlign="center"
      vertAlign="center"
      text="Monday, January 1&#10;0:00 am"
      width="200"
      height="80"
    />
    <Label
      id="titleLbl"
      color="0x617EFF"
      horizAlign="center"
      vertAlign="center"
      text="Slide Title Here"
      width="880"
      height="80"
    />
    <Label
      id="weatherLbl"
      color="0x617EFF"
      horizAlign="center"
      vertAlign="center"
      text="Weather Here"
      width="200"
      height="80"
    />
  </children>
</component>