      />
      <Label
        translation="[500,30]"
        id="titleLbl"
        font="font:SmallBoldSystemFont"
        color="0x617EFF"
        text="Slide Title Here"
      />
      <Label
        translation="[1080,30]"
        id="weatherLbl"
        font="font:SmallBoldSystemFont"
        color="0x617EFF"
        text="Weather Here"
      />
