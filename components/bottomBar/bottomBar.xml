      <Poster
        translation="[0,0]"
        id="background"
        uri="pkg:/assets/slides/bottomBarBackground.png"
      />
      <Label
        translation="[20,30]"
        id="timeLbl"
        font="font:SmallBoldSystemFont"
        color="0x617EFF"
