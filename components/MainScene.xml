<?xml version="1.0" encoding="utf-8" ?>

<component name="MainScene" extends="Scene">
  <script type="text/brightscript" uri="pkg:/components/MainScene.brs"/>
  <interface>
    <field id="playSlides" type="bool" value="true"/>
  </interface>
  <children>
    <Slider
      translation="[0,0]"
      id="slider"
    />
    <BottomBar
      translation="[0,640]"
      id="bottomBar"
      layoutDirection="horiz"
    />
    <RefreshOverlay
      id="refreshOverlay"
      translation="[0,0]"
      visible="true"
    />
    <OptionsScreen
      translation="[0,1440]"
      id="optionsScreen"
    />
    <Timer
      id="slideTimer"
      repeat="true"
      duration="2"
    />
  </children>
</component>
