<?xml version="1.0" encoding="utf-8" ?>

<component name="MainScene" extends="Scene">
  <script type="text/brightscript" uri="pkg:/components/MainScene.brs"/>
  <children>
    <Slider
      translation="[0,0]"
      id="slider"
    />
    <BottomBar
      translation="[0,640]"
      id="bottomBar"
      layoutDirection="horiz"
    />
    <RefreshOverlay
      id="refreshOverlay"
      translation="[0,0]"
      visible="true"
    />
    <Timer
      id="slideTimer"
      repeat="true"
      duration="5"
    />
    <Timer
      id="clockTimer"
      repeat="true"
      duration="60"
    />
    <Timer
      id="startTimer"
      repeat="false"
      duration="2"
    />
  </children>
</component>
